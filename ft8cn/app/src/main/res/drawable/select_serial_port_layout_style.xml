<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <padding
        android:bottom="1dp"
        android:left="3dp"
        android:right="3dp"
        android:top="1dp" />

    <stroke
        android:width="1dp"
        android:color="@color/calling_list_item_color" />

    <gradient
        android:angle="90"
        android:startColor="@color/select_serial_port_layout_background_gradient_start"
        android:endColor="@color/select_serial_port_layout_background_gradient_end"
        android:type="linear" />

    <corners android:radius="10dp" />

    <corners
        android:bottomLeftRadius="6dp"
        android:bottomRightRadius="6dp"
        android:topLeftRadius="6dp"
        android:topRightRadius="6dp" />

</shape>